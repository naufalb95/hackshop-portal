<%- include('../partials/header', { title: 'HackShop Job', isLandingPage: false }) %>
<section id="seller-item-lists">
  <div class="container">
    <h1 class="text-center my-4">Item Lists</h1>
    <div class="d-flex justify-content-between">
      <div>
        <% if (querySearch) { %>
        <p>Menampilkan <%= items.length %> barang untuk <strong>"<%= querySearch %>"</strong></p>
        <% } %>
      </div>
      <div id="dropdown-sort">
        <select name="" id="" class="form-control" onchange="window.location = `?sort=${this.options[this.selectedIndex].value}`">
          <option value="date-desc" <%= querySort === "date-desc" ? 'selected' : '' %>>Tanggal Terbaru</option>
          <option value="date-asc" <%= querySort === "date-asc" ? 'selected' : '' %>>Tanggal Terlama</option>
          <option value="price-asc" <%= querySort === "price-asc" ? 'selected' : '' %>>Harga Termurah</option>
          <option value="price-desc" <%= querySort === "price-desc" ? 'selected' : '' %>>Harga Termahal</option>
        </select>
      </div>
    </div>
    <div class="d-flex flex-wrap justify-content-start">
      <!--  -->
      <% items.forEach((item) => { %>
        <div class="card-manual">
          <a href="/items/<%= item.id %>">
            <div class="card-manual-img d-flex justify-content-center">
              <img src="<%= item.imageUrl %>" alt="<%= item.name %>" class="image-fit" />
            </div>
            <div class="card-manual-info h-50">
              <div class="h-100 position-relative">
                <div class="card-manual-info-title">
                  <h5><%= item.name %></h5>
                </div>
                <div class="card-manual-info-price">
                  <p>
                    <strong>
                      <%= item.formatPrice %>
                    </strong>
                  </p>
                </div>
              </div>
            </div>
          </a>
          </div>
      <% }); %>
      <!--  -->
    </div>
  </div>
</section>
<%- include('../partials/footer') %>
